extends layout/main

block meta
  title=pageTitle

block content

  .page__content
    //- start Первый блок
    include blocks/section-header/index

    //- start блок с видео
    include blocks/section-video/index

    //- start блок Features
    include blocks/section-features/index

    section.section.section-contact
      .container
        .row
          .col-6
            .section-contact__text.wow.bounceInUp
              h2.h2 Contact
              p Questions or concerns? Just fill out the form below and our support team will get back to you within 24 hours
          .col-6
            form.form.form-feedback.wow.slideInRight
              //- Hidden Required Fields
              input(type="hidden" name="project_name" value="Grampus")
              input(type="hidden" name="form_subject" value="Обратная связь")
              .row
                .col-6
                  .inp_wrap.input-effect
                    input.label-effect.form-control.field-required(type="text" name="Имя" placeholder="First Name" value="")
                    label ФИО
                    div.help-text заполните
                .col-6
                  label.inp_wrap

                    input.form-control(type="text" name="Фамилия" placeholder="Last Name" value="")
                    div.help-text заполните
              .row
                .col-12
                  label.inp_wrap
                    input.form-control.field-required.placeholder(type="tel" name="Телефонный номер" placeholder="Phone Number" value="")
                    //- div.help-text Это поле должно содержать телефон в формате +7 123 456-78-90
                    //-  pattern="(\+?\d[- .]*){7,13}"
                    div.help-text заполните
              .row
                .col-12
                  label.inp_wrap
                    input.form-control.field-required(type="email" name="Email" placeholder="Email" value="")
                    div.help-text заполните
              .row
                .col-12
                  .inp_wrap
                    select.form-control.field-required(name="Выбор опций")
                      option(value="option 1") option 1
                      option(value="option 2") option 2
                      option(value="option 3") option 3
                    div.help-text заполните
              .row
                .col-12
                  div.listoptcolor.inp_wrap

                    label
                      input.field-radio-required(type="radio" name="optcolor" value="красный")
                      |&nbsp;красный
                    label
                      input.field-radio-required(type="radio" name="optcolor" value="оранжевый")
                      |&nbsp;оранжевый
                    label
                      input.field-radio-required(type="radio" name="optcolor" value="жёлтый")
                      |&nbsp;жёлтый
                    label
                      input.field-radio-required(type="radio" name="optcolor" value="зелёный")
                      |&nbsp;зелёный
                    div.help-text Выберите нужный пункт
              .row
                .col-12
                  //- .custom-label
                  .inp_wrap
                    label(for="ident")
                      input#ident.field-required(type="checkbox" name="Персональные данные")
                        //- span.custom-label__marker
                      //- div.help-text Выберите нужный пункт
                      | соглашаюсь
              .row
                .col-12
                  .inp_wrap
                    button.btn.btn-primary.btn-lg(type="submit") Submit Now
                    button.btn.btn-primary.btn-lg(type="reset") Reset


    section.section
      .container
        .row
          .col-12
            <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Af6d9cca34d8e7eb6001514c77a1e18223a9c2d547787335be370f2f873e71477&amp;width=100%25&amp;height=450&amp;lang=ru_RU&amp;scroll=true"></script>

block footer
  include blocks/page-footer/index
